<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:background="@color/popupBackground"
    android:padding="10dp">

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/tablapopupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:textColor="@color/popupTextColor"
        android:textSize="30dp"/>

    <android.parkskocjanskejame.utils.CustomButton
        android:id="@+id/tablapopupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tablapopupText"
        android:background="@drawable/custombutton"
        android:text="@string/zapri"
        android:textSize="20dp"
        android:textColor="@color/buttonTextColor"
        android:layout_marginTop="5dp"/>
</RelativeLayout>