<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <android.parkskocjanskejame.utils.CustomTextView
            android:id="@+id/tabla3bText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tabla3b"
            android:textSize="30dp"
            android:textColor="@color/textColor"/>

        <android.parkskocjanskejame.utils.ExpandableHeightGridView
            android:id="@+id/tabla3bGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:numColumns="2"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"/>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Odgovori"
            android:layout_margin="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tabla3bGrid"/>
    </LinearLayout>
</ScrollView>