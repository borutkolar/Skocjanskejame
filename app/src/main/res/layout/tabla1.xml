<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context="android.parkskocjanskejame.Tabla1">

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/tabla1Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tabla1"
        android:textColor="@color/textColor"
        android:textSize="44dp"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <android.parkskocjanskejame.utils.CustomButton
        android:id="@+id/tabla1Button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="@string/naprej"
        android:background="@drawable/custombutton"
        android:textColor="@color/buttonTextColor"
        android:textSize="20dp"
        android:layout_marginBottom="73dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
