<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="android.parkskocjanskejame.Status">

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/statusText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/status"
        android:textColor="@color/textColor"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/statusText1">

        <ImageView
            android:id="@+id/znacka1"
            android:alpha="0.2"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/znacka1" />

        <ImageView
            android:id="@+id/znacka2"
            android:alpha="0.2"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/znacka2" />

        <ImageView
            android:id="@+id/znacka3"
            android:alpha="0.2"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/znacka3" />

        <ImageView
            android:id="@+id/znacka4"
            android:alpha="0.2"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/znacka4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearlayout1">

        <ImageView
            android:id="@+id/znacka5"
            android:alpha="0.2"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/znacka5" />

        <ImageView
            android:id="@+id/znacka6"
            android:alpha="0.2"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/znacka6" />

        <ImageView
            android:id="@+id/znacka7"
            android:alpha="0.2"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/znacka7" />

        <ImageView
            android:id="@+id/znacka8"
            android:alpha="0.2"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/znacka8" />
    </LinearLayout>

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/statusText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:text="1"
        android:textColor="@color/textColor"
        android:textSize="40dp"
        android:layout_below="@+id/linearlayout2"
        android:layout_alignStart="@+id/statusText1" />

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/statusText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/8"
        android:textColor="@color/textColor"
        android:textSize="40dp"
        android:layout_alignBaseline="@+id/statusText2"
        android:layout_alignBottom="@+id/statusText2"
        android:layout_toEndOf="@+id/statusText2" />

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/statusText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/status2"
        android:textColor="@color/textColor"
        android:textSize="30dp"
        android:layout_below="@+id/statusText2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <ImageView
        android:id="@+id/leftarrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/leftarrow" />

    <ImageView
        android:id="@+id/help"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/help" />

</RelativeLayout>
