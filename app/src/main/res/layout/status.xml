<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context="android.parkskocjanskejame.Status">

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/statusText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/status"
        android:textColor="@color/textColor"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <GridView
        android:id="@+id/statusGrid"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:numColumns="4"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:layout_above="@+id/statusText2"
        android:layout_alignParentStart="true" />

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/statusText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:text="0"
        android:textColor="@color/textColor"
        android:textSize="40dp"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/statusText4"
        android:layout_alignStart="@+id/statusText1" />

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/statusText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/8"
        android:textColor="@color/textColor"
        android:textSize="40dp"
        android:layout_alignBaseline="@+id/statusText2"
        android:layout_alignBottom="@+id/statusText2"
        android:layout_toEndOf="@+id/statusText2" />

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/statusText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/status2"
        android:textColor="@color/textColor"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

</RelativeLayout>
