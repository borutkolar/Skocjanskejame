<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context="android.parkskocjanskejame.Status">

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/statusText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/status"
        android:textColor="@color/textColor"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/statusText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="140dp"
        android:text="0"
        android:textColor="@color/textColor"
        android:textSize="50dp"
        android:layout_below="@+id/statusText1"
        android:layout_alignStart="@+id/statusText1" />

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/statusText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/8"
        android:textColor="@color/textColor"
        android:textSize="50dp"
        android:layout_alignBaseline="@+id/statusText2"
        android:layout_alignBottom="@+id/statusText2"
        android:layout_toEndOf="@+id/statusText2" />

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/statusText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/status2"
        android:textColor="@color/textColor"
        android:textSize="35dp"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
