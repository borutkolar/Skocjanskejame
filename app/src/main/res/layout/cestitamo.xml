<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="android.parkskocjanskejame.Cestitamo">

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/cestitamoText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:textSize="25dp"
        android:text="@string/cestitamo1a"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <ImageView
        android:id="@+id/cestitamoImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/znacka1"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/cestitamoText1"
        android:layout_centerHorizontal="true" />

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/cestitamoText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cestitamoImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:text="@string/cestitamo1b"
        android:textColor="@color/textColor"
        android:textSize="20dp" />

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/cestitamoText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cestitamoText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/textColor"
        android:textSize="18dp" />

    <android.parkskocjanskejame.utils.CustomButton
        android:id="@+id/cestitamoButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_above="@+id/help"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custombutton"
        android:text="@string/naprej"
        android:textColor="@color/buttonTextColor"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/help"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/help" />

</RelativeLayout>
