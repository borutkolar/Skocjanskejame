<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context="android.parkskocjanskejame.Cestitamo">

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/cestitamoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cestitamo"
        android:textColor="@color/textColor"
        android:textSize="60dp"
        android:gravity="center"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/cestitamoButton"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/custombutton"
        android:text="@string/naprej"
        android:textSize="20dp"
        android:textColor="@color/buttonTextColor"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp" />
</RelativeLayout>
